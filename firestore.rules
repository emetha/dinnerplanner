rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
   
   	function signedIn() {
      return request.auth != null;
    }
    
    function sameUser(user) {
    	return request.auth.uid == user;
    }
    
    function isAdmin(user) {
      return user.data.role == "admin";
    }

    match /users/{user} {
    	  allow read, write: if signedIn() && sameUser(user);
    	match /menu/{documents=**} {
        allow read, write: if signedIn() && sameUser(user) && isAdmin(user);
    }
  }
  match /approvedUsers/{user} {
      allow write, read: if signedIn() && sameUser(user) && isAdmin(user);
    }
	}
}